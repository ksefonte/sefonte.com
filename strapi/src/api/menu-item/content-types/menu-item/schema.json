{
  "kind": "collectionType",
  "collectionName": "menu_items",
  "info": {
    "singularName": "menu-item",
    "pluralName": "menu-items",
    "displayName": "Menu Item",
    "description": "Navigation menu items for the website"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "url": {
      "type": "string",
      "required": true
    },
    "order": {
      "type": "integer",
      "required": true,
      "default": 0
    },
    "subItems": {
      "type": "component",
      "repeatable": true,
      "component": "menu.sub-menu-item"
    }
  }
}
